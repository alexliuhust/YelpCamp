<%- include("../partials/header") %>
<!-- The new route for Comments! -->
<div class="container">
	<div class="row">
		<h1>Comments for <%= campground.name %>!</h1>
		<p></p>

		<div class="myForm">
			<form action="/campground/<%= campground._id%>/comments" method="POST">
				
				<div class="form-group">
					<label>Comments</label>
					<input class="form-control" name="comment[text]" required>
				</div>
				
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/campground/<%= campground._id%>">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>



<%- include("../partials/footer") %>