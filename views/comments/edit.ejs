<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1>Edit Comment</h1>
		<p></p>

		<div class="myForm">
			<form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				
				<div class="form-group">
					<label>Comments</label>
					<input class="form-control" name="comment[text]" value="<%- comment.text %>" required>
				</div>
				
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/campground/<%= campground_id%>">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>


<%- include("../partials/footer") %>