<%- include("../partials/header") %>
<!-- The new route for Campgrounds! -->
<div class="container">
	<div class="row">
		<h1>Come here and Creat a Camp!</h1>
		<p></p>

		<div class="myForm">
			<form action="/campground" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="Price per Night" min="0.01" step="0.01" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Image URL" required>
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="3" name="campground[description]" placeholder="Description" required></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campground">Go Back</a>
		</div>
		

		
	</div>
	
	
	
</div>

<%- include("../partials/footer") %>


