<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1>Edit Camp!</h1>
		<p></p>

		<div class="myForm">
			<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" required>
				</div>
				<div class="form-group">
					<label>Image</label>
					<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" required>
				</div>
				<div class="form-group">
					<label>Description</label>
					<textarea class="form-control" rows="3" name="campground[description]" required><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campground/<%= campground._id %>">Go Back to The Info Page</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>